@model TarefaModel
@{
    ViewData["Title"] = "Nova Tarefa";
}  
 
<form asp-controller="TarefaCadastrada" asp-action="NovaTarefa" method="post">
        <input type="hidden" asp-for="id"/>
  <div class="form-group mb-3">
    <label for="titulo" class="form-label">Titulo da Tarefa</label>
    <input type="text" asp-for="titulo" class="form-control" placeholder="Digite o titulo da tarefa">
    @Html.ValidationMessageFor(i => i.titulo)
  </div>
  
    <div class="form-group mb-3">
    <label for="data" class="form-label">Data</label>
    <input type="date" asp-for="data" class="form-control">
    @Html.ValidationMessageFor(i => i.data)
  </div>
  
    <div class="form-group mb-3">
    <label for="inicio" class="form-label">Inicio da Tarefa</label>
    <input type="time" asp-for="horaInicio" class="form-control" data-format="hh:mm" >
    @Html.ValidationMessageFor(i => i.horaInicio)
  </div>
  
    <div class="form-group mb-3">
    <label for="fim" class="form-label">Fim da Tarefa</label>
    <input type="time" asp-for="horaFim" class="form-control" data-format="hh:mm" >
    @Html.ValidationMessageFor(i => i.horaFim)
  </div>
  
    <div class="form-group mb-3">
    <label for="prioridade" class="form-label">Prioridade</label>
    <select class="form-control" asp-for="prioridade">
      <option>Alta</option>
      <option>Média</option>
      <option>Baixa</option>
    @Html.ValidationMessageFor(i => i.prioridade)
</select>
  </div>


  <button type="submit" class="btn btn-primary btn-block">Salvar</button>
  <a class="btn btn-secondary btn-block" asp-controller="TarefaCadastrada" asp-action="Index">Voltar</a>
</form>